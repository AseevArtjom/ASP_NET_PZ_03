@using ASP_NET_PZ_03.Models.Forms
@model UserRolesForm
@{
	ViewData["Title"] = "UserRoles";
	var user = ViewData["User"] as User;

}
<head>
	<link rel="stylesheet" href="/css/Form.css">
</head>
<form method="post">
	<div class="form_container">

		<label>FullName : </label>
		<h5>@user.FullName</h5>

		<label>Email : </label>
		<h5>@user.Email</h5>

		@for (int i = 0; i < Model.Roles.Count; i++)
		{
				<div>
					<input asp-for="Roles[i].Name" type="hidden">
					<input asp-for="Roles[i].Enable" class="form-check-input" style="margin-bottom:10px;">
					<label class="form-check-label" style="margin-top:5px;">@Model.Roles[i].Name</label>
				</div>
		}


		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
