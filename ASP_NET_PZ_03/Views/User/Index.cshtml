@model List<User>
@{
	Layout = "_Layout";
	ViewData["Title"] = "Професии";
}
<link rel="stylesheet" href="/css/Form.css">

<a asp-controller="User" asp-action="Create" class="btn btn-outline-primary">Создать</a>

<div class="row">
	<div class="col-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model){
					<tr>
						<td>@item.Id</td>
						<td>@item.Email</td>
						<td></td>
						<td>
							<div class="control">
								<a asp-controller="User" asp-action="Edit" data-confirm-message="Are you sure you want to delete the user?" asp-route-id="@item.Id" class="btn btn-outline-primary">Изменить</a>
								<a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">Удалить</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</tabl>
	</div>
</div>

	

