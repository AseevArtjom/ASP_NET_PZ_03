@model List<Info>
@{
	Layout = "_Layout";
	ViewData["Title"] = "Список";
}
<link rel="stylesheet" href="/css/Form.css">

<a asp-controller="Info" asp-action="Create" class="btn btn-outline-primary">Создать</a>

<div class="row">
	<div class="col-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>ФИО</th>
					<th>Возраст</th>
					<th>Город</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model){
					<tr>
						<td>@item.Id</td>
						<td>@(item.FirstName + " " + item.LastName)</td>
						<td>@item.Age</td>
						<td>@item.City</td>
						<td>
							<div class="control">
								<a asp-controller="Info" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Изменить</a>
								<a asp-controller="Info" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">Удалить</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</tabl>
	</div>
</div>

	

